<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= room.roomName %> - Classroom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5"><%= room.roomName %></h1>
            <p class="text-muted">Room ID: <%= room.roomId %></p>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Participants List</h5>
                <% if (room.participants.length === 0) { %>
                    <p class="text-muted">No participants have joined yet.</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Photo</th>
                                    <th scope="col">Roll No</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">Year</th>
                                    <th scope="col">Join Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% room.participants.forEach((participant, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <% if (participant.photoUrl) { %>
                                                <img src="<%= participant.photoUrl %>" alt="Photo" class="img-thumbnail" width="50">
                                            <% } else { %>
                                                <img src="default-photo-url.jpg" alt="Default Photo" class="img-thumbnail" width="50">
                                            <% } %>
                                        </td>
                                        <td><%= participant.rollNo %></td>
                                        <td><%= participant.department || 'N/A' %></td>
                                        <td><%= participant.year || 'N/A' %></td>
                                        <td><%= moment(participant.joinTime).format('LLL') %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Activity Logs Section -->
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Activity Logs</h5>
                <ul id="logList" class="list-group">
                    <!-- Logs will be appended here dynamically -->
                </ul>
            </div>
        </div>

    </div>

    <!-- Socket.IO Script -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Fetch logs from the server when the page is loaded
        fetch(`/room/<%= room.roomId %>/logs`)
            .then(response => response.json())
            .then(data => {
                const logList = document.getElementById('logList');
                data.logs.forEach(log => {
                    const listItem = document.createElement('li');
                    listItem.classList.add('list-group-item');
                    listItem.textContent = `${new Date(log.timestamp).toLocaleString()}: ${log.event}`;
                    logList.appendChild(listItem);
                });
            })
            .catch(error => {
                console.error('Error fetching logs:', error);
            });

        // Listen for new logs using Socket.IO
        const socket = io();
        socket.on("newLog", (logData) => {
            const logList = document.getElementById('logList');
            const listItem = document.createElement('li');
            listItem.classList.add('list-group-item');
            listItem.textContent = `${new Date(logData.timestamp).toLocaleString()}: ${logData.event}`;
            logList.appendChild(listItem);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
